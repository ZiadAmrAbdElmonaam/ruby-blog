<h1>Article Details</h1>

<div class="article-details">
  <p><strong>Title:</strong> <%= @article.title %></p>
  <p><strong>Description:</strong> <%= @article.description %></p>
</div>

<div class="actions">
  <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-edit" %>
  <%= link_to 'Back to List', articles_path, class: "btn btn-back" %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-delete" %>
</div>